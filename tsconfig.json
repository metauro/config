{
  "compilerOptions": {
    "module": "umd",
    "moduleResolution": "node",
    "noLib": false,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2017"]
  },
  "include": ["./src/**/*.ts"]
}
